<div class="col-md-4 offset-md-2">
    <h2 class="text-center">Orders Up</h2>
    <ul class="list-group">
    {{#each burgers}}
        <li class="m-1">{{this.burger_name}} {{>button id=this.id}}</li>
    {{/each}}
    </ul>
</div>
<div class="col-md-4">
    <h2 class="text-center">Finished</h2>
    <ul class="list-group">
    {{#each devoured}}
        <li class="m-1">{{this.burger_name}}</li>
    {{/each}}
    </ul>
</div>